# aliases and functions


cd() {
    builtin cd "$@" || return
    if [[ -d .venv ]]
    then
        deactivate &>/dev/null
        source .venv/bin/activate
    fi
}

is_macos() {
    if [[ "$(uname -s)" == "Darwin" ]]
    then
        return 0
    else
        return 1
    fi
}

mkvenv() {
    python3 -m venv .venv
    source .venv/bin/activate
}

reup() {
    if is_macos
    then
        brew update
        printf "\n\033[0;34m==>\033[0m Brew Updates\n"
        brew outdated
        printf "\n\033[0;34m==>\033[0m Brew Cask Updates\n"
        brew outdated --cask
    fi
}

sysup() {
    if is_macos
    then
        softwareupdate -l
    else
        sudo apt-get update
        sudo apt-get -u upgrade --assume-no
    fi
}


if is_macos
then
    alias ls='ls -FGhl'
else
    alias ls='ls -Fhl --color'
fi

alias grep='egrep --color'

alias vi='vim'
